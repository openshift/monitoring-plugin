{
  "Incident Scenario Fixture": {
    "prefix": "incident-scenario",
    "body": [
      "name: \"${1:Scenario Name}\"",
      "description: \"${2:Description of what this scenario represents}\"",
      "incidents:",
      "  - id: \"${3:incident-id-001}\"",
      "    component: \"${4|monitoring,storage,network,compute,api-server,etcd,version,Others|}\"",
      "    layer: \"${5|core,Others|}\"",
      "    timeline:",
      "      start: \"${6:2h}\"  # Started ${6:2 hours} ago",
      "      # end: \"${7:1h}\"  # Resolved ${7:1 hour} ago (omit for ongoing incidents)",
      "    alerts:",
      "      - name: \"${8:AlertName}\"",
      "        namespace: \"${9:openshift-monitoring}\"",
      "        severity: \"${10|critical,warning,info|}\"",
      "        firing: ${11|true,false|}"
    ],
    "description": "Complete incident scenario fixture template"
  },
  "Simple Incident": {
    "prefix": "incident",
    "body": [
      "- id: \"${1:incident-id-001}\"",
      "  component: \"${2|monitoring,storage,network,compute,api-server,etcd,version,Others|}\"",
      "  layer: \"${3|core,Others|}\"",
      "  timeline:",
      "    start: \"${4:2h}\"  # Started ${4:2 hours} ago",
      "  alerts:",
      "    - name: \"${5:AlertName}\"",
      "      namespace: \"${6:openshift-monitoring}\"",
      "      severity: \"${7|critical,warning,info|}\"",
      "      firing: ${8|true,false|}"
    ],
    "description": "Single incident template"
  },
  "Alert": {
    "prefix": "alert",
    "body": [
      "- name: \"${1:AlertName}\"",
      "  namespace: \"${2:openshift-monitoring}\"",
      "  severity: \"${3|critical,warning,info|}\"",
      "  firing: ${4|true,false|}"
    ],
    "description": "Single alert template"
  },
  "Timeline with Severity Changes": {
    "prefix": "timeline-severity",
    "body": [
      "timeline:",
      "  start: \"${1:3h}\"  # Started ${1:3 hours} ago",
      "  severityChanges:",
      "    - time: \"${2:3h}\"  # Started as ${3:warning}",
      "      severity: \"${3|critical,warning,info|}\"",
      "    - time: \"${4:1h}\"  # Escalated to ${5:critical} ${4:1 hour} ago",
      "      severity: \"${5|critical,warning,info|}\""
    ],
    "description": "Timeline with severity escalation"
  }
}